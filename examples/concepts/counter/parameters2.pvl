class parameters {
  
  given    frac p;
  requires c!=null ** Perm(c.x,p);
  yields   frac q;
  ensures  c!=null ** Perm(c.x,q) ** q <= p;
  void drop(Counter c){
    q = p;
  }

  void twice(){
    Counter c=new Counter();
    c.x=37;
    frac q;
    drop(c) given { p = 1 } yields { q = q };
    drop(c) given { p = q };
  }
}
